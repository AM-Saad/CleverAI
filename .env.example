# Cron Job Configuration
# Set ENABLE_CRON=true to enable cron jobs in development
ENABLE_CRON=false

# Cron schedules (use cron syntax: https://crontab.guru/)
# Examples:
# Every hour: 0 * * * *
# Every 2 hours: 0 */2 * * *
# Every day at 9 AM: 0 9 * * *
# Every Monday at 9 AM: 0 9 * * 1
CHECK_DUE_CARDS_SCHEDULE=0 * * * *

# Enable/disable specific cron jobs
CHECK_DUE_CARDS_ENABLED=true

# Default timezone for cron jobs
DEFAULT_TIMEZONE=UTC

# Security token for cron endpoints
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
CRON_SECRET_TOKEN=your-secret-token-here
